# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Bedrock Agent IDs (create these in AWS Console)
BEDROCK_AGENT_ID=your_agent_id_here
BEDROCK_AGENT_ALIAS_ID=your_agent_alias_id_here

# Security Configuration (optional - overrides security_policy.yaml)
# Comma-separated list of allowed AWS services
AWS_ALLOWED_SERVICES=ec2,s3,rds,eks,lambda,iam,cloudwatch,dynamodb

# Comma-separated list of allowed AWS regions
AWS_ALLOWED_REGIONS=us-east-1,us-west-2,eu-west-1,eu-central-1,ap-northeast-1,ap-southeast-1

# Enable strict security mode (true/false)
# When true: Rejects on any validation failure
AWS_STRICT_MODE=true

# Allow unknown/unlisted services (true/false)
# When false: Only allows services in whitelist
AWS_ALLOW_UNKNOWN_SERVICES=false
